{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "types": ["vitest/globals"],
    "moduleResolution": "bundler",
    "paths": {
      "hlogr/*": ["./src/*"],
      "hlogr/config/*": ["./config/*"],
      "hlogr/package.json": ["./package.json"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
